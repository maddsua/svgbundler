{
	"compilerOptions": {
		"lib": ["DOM", "ES5", "ES6", "ESNext"],
		"target": "ESNext",
		"typeRoots": [
			"node_modules/@types"
		],
		"rootDir": "npm-package/",
		"outDir": "bin/",
		"module": "NodeNext",
		"resolveJsonModule": true,
		"moduleResolution": "NodeNext",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"sourceMap": false
	}
}